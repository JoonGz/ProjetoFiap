@model IEnumerable<ProjetoTurmasFiap.Entities.AlunoTurmaViewModel>

@{
    ViewData["Title"] = "Detalhe";
}

<h1>Detalhe da Turma @(Model.FirstOrDefault()?.NomeTurma)</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Aluno
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeAluno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { idAluno=item.Aluno_id, idTurma=item.Turma_id }) |
                    @Html.ActionLink("Inativar", "Inativar", new { idAluno=item.Aluno_id, idTurma=item.Turma_id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Voltar</a>
</div>
